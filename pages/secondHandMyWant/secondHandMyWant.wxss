.tabBar {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}
.stickyClass{
    position: sticky !important;
    top: 0rpx;
    background-color: #fff;
    z-index: 999;
}
.tab-item {
  display: inline-block;
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
      z-index: 999;
}

.active {
  border-bottom: 3rpx solid #ff3434;
  color: #ff3434;
}

.wantList {
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 20rpx;
  position: relative;
}

.detail-head {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  height: 80rpx;
  position: relative;
  display: flex;
}

.detail-head-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 5%;
}

.detail-head-mes {
  width: 60%;
}

.detail-head-nickname {
  font-size: 25rpx;
  color: #585858;
  margin-left: 20rpx;
  margin-top: 5rpx;
  font-weight: bold;
}

.detail-head-pos {
  font-size: 23rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  color: #a7a7a7;
  line-height: 30rpx;
}

.detail-head-goodsWay {
  color: #ef696c;
  position: absolute;
  right: 5%;
  top: 20rpx;
  font-size: 23rpx;
}

.detail-head-browse {
  color: #a7a7a7;
  position: absolute;
  right: 5%;
  bottom: 30rpx;
  display: flex;
}

.goodsTitle {
  margin-left: 5%;
  margin-right: 5%;
  font-size: 25rpx;
  /* margin-top: 20rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.goodsPrice {
  height: 50rpx;
  margin-left: 5%;
  margin-top: 10rpx;
  vertical-align: bottom;
  position: relative;
}

.goodsPrice-flag {
  color: #ef696c;
  font-size: 20rpx;
  /* font-weight: bold; */
}

.goodsPrice-sellprice {
  color: #ef696c;
  font-size: 30rpx;
  /* font-weight: bold; */
}

.goodsPrice-primetext {
  margin-left: 15rpx;
  color: #a7a7a7;
  font-size: 20rpx;
  /* font-weight: bold; */
}

.goodsPrice-primeprice {
  color: #a7a7a7;
  font-size: 20rpx;
  /* font-weight: bold; */
}

.goodsImg {
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}

.goodsImg-img {
  width: 24%;
  margin-right: 1%;
  margin-bottom: 5rpx;
  height: 150rpx;
}

.Bottom {
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 20rpx;
  padding-top: 10rpx;
  margin-top: 10rpx;
  color: #e1e1e4;
}

.robbed {
  width: 100rpx;
  height: 100rpx;
  background: #BFBFBF;
  color: #fff;
  font-weight: bold;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  opacity: 1;
  border-radius: 50%;
  line-height: 100rpx;
  left: 50%;
  top: 50%;
  margin-top: -50rpx; /* 高度的一半 */
  margin-left: -50rpx;
}
.underShelf{
  width: 100rpx;
  height: 100rpx;
  background: #BFBFBF;
  color: #fff;
  font-weight: bold;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  opacity: 1;
  border-radius: 50%;
  line-height: 100rpx;
  left: 50%;
  top: 50%;
  margin-top: -50rpx; /* 高度的一半 */
  margin-left: -50rpx;
}